@{
    ViewData["Title"] = "Home Page";
}
@foreach (var tinTuc in Model) {
    <a asp-area="" asp-controller="Home" asp-action="NewsDetail" asp-route-maTT="@tinTuc.MaTintuc">
        <div class="news">
            @*<div class="container">*@
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-xs-4">
                        <img src="@tinTuc.AnhBia" />
                    </div>
                    <div class="col-md-9 col-sm-8 col-xs-8">
                        <div class="row">
                            <div class="col-md-12">
                                <b>@tinTuc.TieuDe</b>
                            </div>
                            <div class="col-md-12">
                                <p>@tinTuc.LoiMoDau</p>
                            </div>
                            <div class="col-md-12">
                                <p>Ngày đăng: @tinTuc.NgayDang</p>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            @*</div>*@
        </div>
    </a>
}
